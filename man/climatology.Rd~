\name{anomaly}
\alias{anomaly}
\alias{anomaly.default}
\alias{anomaly.field}
\alias{anomaly.station}
\alias{anomaly.yearly}
\alias{anomaly.daily}
\alias{anomaly.daily}
\alias{climatology}
\alias{climatology.defaul}
\alias{climatology.field}
\alias{climatology.station}
\alias{climvar}
\alias{cumugram}
\alias{clim2pca}
\alias{clim2pca.default}
\alias{clim2pca.month}
\alias{clim2pca.daily}
\title{Climatology and anomaly}
\description{
  Various functions for handling climatological objects, such
  as estimating climatologies (mean plus seasonal variations), the
  anomalies, or trends (or the detrened residuals).

  An additional function \code{clim2pca} decomposes the data as a sum of
  wearly shapes (PCA modes), where the leading shape describes the
  seasonal cycle and the higher order modes describe perturbations to
  this shape from year to year. 
}
\usage{
anomaly(X,...)
anomaly.default(X,...)
anomaly.field(X,...) 
anomaly.station(X,...)
anomaly.yearly(X,baseline=1961:1990)
anomaly.monthly(X,baseline=NULL)
anomaly.daily(X,baseline=NULL)
clim2pca(x)
clim2pca(x)
clim2pca.month(x) 
clim2pca.day(x) 
climatology(X,...) 
climatology.default(X,...)
climatology.field(X,...) 
climatology.station(X,...)
climvar(x,FUN=sd,plot=FALSE)
cumugram(x,it=NULL,...)
}
\arguments{
Returns a similar object as the input.
}
\value{A field object}

\seealso{
  \code{\link{as.anomaly}}
}

\author{R.E. Benestad}
\examples{
# Example: use aggregate to compute annual mean temperature for Svalbard:
data(Svalbard)
yr <- year(Svalbard) 
y <- aggregate(Svalbard, by=yr, mean, na.rm = FALSE) 
plot(y)

data(ferder)
t2m.sd<- climvar(ferder,plot=TRUE)

data(bjornholt)
mu.clim <- climvar(bjornholt,exceedance,plot=TRUE,threshold=1)

cumugram(ferder)
}
\keyword{utilities}
