\name{anomaly}
\alias{anomaly.default}
\alias{anomaly.comb}
\alias{anomaly.field}
\alias{anomaly.station}
\alias{anomaly.annual}
\alias{anomaly.month}
\alias{anomaly.season}
\alias{anomaly.day}
\alias{climatology}
\alias{climatology.default}
\alias{climatology.field}
\alias{climatology.station}
\alias{clim2pca}
\alias{clim2pca.default}
\alias{clim2pca.month}
\alias{clim2pca.day}
\title{Anomaly and Climatology}
\description{
  S3-method that computes anomalies and/or climatology for time series and fields.
  \code{clim2pca} is unfinished
}
\usage{
anomaly(x,...)
anomaly.default(x,...)
anomaly.comb(x,...)
anomaly.field(x,...)
anomaly.station(x,...)
anomaly.annual(x,baseline=1961:1990)
anomaly.month(x,baseline=NULL)
anomaly.season(x,baseline=NULL) 
anomaly.day(x,baseline=NULL)
climatology(x,...)
climatology.default(x)
climatology.field(x)
climatology.station(x)
clim2pca(x,...)
clim2pca.default(x)
clim2pca.month(x)
clim2pca.day(x)
}
\arguments{
  \item{x}{A station or field object}
  \item{baseline}{vector defining the reference interval}
}
\value{The call returns a similar object as x}

\seealso{
 \code{\link{as.anomaly}}, \code{\link{as.climatology}}
}

\author{R.E. Benestad}
\examples{
data(ferder)
plot(anomaly(ferder))

}
\keyword{utilities}
